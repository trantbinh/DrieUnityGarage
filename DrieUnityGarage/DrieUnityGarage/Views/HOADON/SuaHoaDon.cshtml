@model DrieUnityGrage.Models.HOADON
@{
    ViewBag.Title = "SuaHoaDon";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Chỉnh sửa thông tin hàng hóa</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div class="container col-8">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>HOADON</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaHD)

                <div class="form-group">
                    @Html.LabelFor(model => model.NgayLap, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HD_MaKH, "HD_MaKH", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("HD_MaKH", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HD_MaKH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HD_BienSoXe, "HD_BienSoXe", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("HD_BienSoXe", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HD_BienSoXe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TongThanhToan, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TongThanhToan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TongThanhToan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HD_MaTT, "HD_MaTT", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("HD_MaTT", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HD_MaTT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HD_MaTN, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HD_MaTN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HD_MaTN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div class="form-group" style="margin-top:40px">
            <div class="row">
                <div class="col-lg-5 align-bottom">
                    @Html.ActionLink("< Quay về", "LayDanhSachHoaDon", null, new { @class = "nonedecor" })
                </div>
                <div class="col-lg-7">
                    <input type="submit" value="Lưu" class="btn btn-info create-btn" />

                </div>
            </div>
        </div>
    </div>
    }
</div>


