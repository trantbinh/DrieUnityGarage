@model DrieUnityGrage.Models.HANGHOA

@{
    ViewBag.Title = "Sửa thông tin hàng hoá";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/HangHoa_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Chỉnh sửa thông tin hàng hoá</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div class="container col-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal form-decor">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaHH)

                <div class="form-group space-field">
                    Tên hàng hoá
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenHH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenHH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group space-field">
                    Đơn giá
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group space-field">
                    Đơn vị tính
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DonViTinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group space-field">
                    Loại hàng
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LoaiHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoaiHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group space-field">
                    Số lượng tồn
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group space-field">
                    Mã nhà cung cấp
                    <div class="col-md-10">
                        @Html.DropDownList("HH_MaNCC", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HH_MaNCC, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:40px">
                    <div class="row">
                        <div class="col-lg-5 align-bottom">
                            @Html.ActionLink("< Quay về", "Index", null, new { @class = "nonedecor" })
                        </div>
                        <div class="col-lg-7">
                            <input type="submit" value="Lưu" class="btn btn-info create-btn" />

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>



</div>
