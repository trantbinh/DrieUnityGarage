@model DrieUnityGrage.Models.NHANVIEN

@{
    ViewBag.Title = "Xoá nhân viên";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NhanVien_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Xác nhận xoá thông tin nhân viên</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div class="container col-8">
        <hr />
        <div class="form-horizontal form-decor">

            <div class="form-group space-field">
                Họ tên nhân viên:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.HoTenNV)
                </div>
            </div>
            <div class="form-group space-field">
                Số điện thoại:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.DienThoaiNV)
                </div>
            </div>
            <div class="form-group space-field">
                Ngày sinh:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.NgaySinh)
                </div>
            </div>
            <div class="form-group space-field">
                Giới tính:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.GioiTinh)
                </div>
            </div>
            <div class="form-group space-field">
                Email:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>
            <div class="form-group space-field">
                Địa chỉ:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.DiaChi)
                </div>
            </div>
            <div class="form-group space-field">
                Chức vụ:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.ChucVu)
                </div>
            </div>
            <div class="form-group space-field">
                Phòng ban:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.PhongBan)
                </div>
            </div>
            <div class="form-group space-field">
                Tên đăng nhập:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.TenDangNhap)
                </div>
            </div>
            <div class="form-group space-field">
                Mật khẩu:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.MatKhau)
                </div>
            </div>
            <div class="form-group space-field">
                Ngày tạo:
                <div class="col-md-12 form-control">
                    @Html.DisplayFor(model => model.NgayTaoTK)
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group" style="margin-top:40px">
                <div class="row">
                    <div class="col-lg-5 align-bottom">
                        @Html.ActionLink("< Quay về", "Index", null, new { @class = "nonedecor" })
                    </div>
                    <div class="col-lg-7">
                        <input type="submit" value="Xoá thông tin" class="btn btn-danger delete-btn " />
                    </div>
                </div>
            </div>
        }
    </div>
</div>