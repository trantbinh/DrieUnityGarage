@model IEnumerable<DrieUnityGrage.Models.THONGTINTIEPNHAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-5">
            <h2>Danh sách thông tin tiếp nhận </h2>
        </div>
        <div class="col-lg-5">
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <table class="table index-table" style="margin-top:20px;">

        <tr>
            <th>
                Mã khách hàng
            </th>
            <th>
                Biển số xe
            </th>
            <th>
                Mã nhân viên
            </th>
            <th>
                Thời gian tiếp nhận
            </th>
            <th>
                Thời gian giao dự kiến
            </th>
            <th>
                Ghi chú
            </th>
            <th>

            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.TN_MaKH)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.TN_BienSoXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TN_MaNV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianTiepNhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianGiaoDuKien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GhiChuKH)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaTN }, new { @class = "btn btn-success" })

                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTN }, new { @class = "btn btn-danger" })

                </td>
                <td>   @Html.ActionLink("Xoá", "Delete", new { id = item.MaTN }, new { @class = "btn btn-primary" })</td>
            </tr>
         }
    </table>
</div>

